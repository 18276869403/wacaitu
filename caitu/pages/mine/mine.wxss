/* pages/mine/mine.wxss */

page {
  background: #f5f6f9;
  padding-bottom: 120rpx;
}

.content {
  width: 100%;
}

.minebg-img {
  width: 750rpx;
  height: 300rpx;
  position: relative;
}

.content-list {
  position: absolute;
  top: 50rpx;
  width: 100%;
  text-align: center;
  
}

.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 138rpx;
  height: 138rpx;
  border-radius: 50%;
  margin-left: 306rpx;
  margin-bottom: 27rpx;
}

.userinfo-nickname {
  color: #fff;
  font-size: 16px;
}

/* 底部 */

.bottom {
  width: 100%;
  margin-top: 32rpx;
}

.bottom-list {
  width: 100%;
  height: 88rpx;
  background: #fff;
  margin-bottom: 2rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.bottom-list-content {
  margin-left: 1%;
}

.bottom-list-left {
  margin-left: 3%;
  width: 10%;
  text-align: center;
}

.bottom-list-right {
  position: absolute;
  right: 30rpx;
}

.enter-img {
  width: 14rpx;
  height: 24rpx;
  margin-top: 32rpx;
}

.ziliao-img {
  width: 40rpx;
  height: 40rpx;
  margin-top: 24rpx;
}

/* 弹窗 */

.commodity_screen1 {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.34;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
  text-align: center;
}

.commodity_attr_box1 {
  border-radius: 10px;
  position: fixed;
  z-index: 20000;
  width: 100%;
  height: 100%;
  text-align: center;
  justify-content: center;
  top: 30%;
}

.tanchuang {
  margin: auto;
  position: relative;
  width: 350rpx;
  height: 360rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
}

.tanchuang-item {
  width: 100%;
  text-align: center;
  position: absolute;
  top: -120rpx;
}

.tanchuang-img {
  width: 234rpx;
  height: 234rpx;
}

.tanchuang-text {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 30rpx;
  color: rgba(255, 125, 72, 1);
  margin-bottom: 15rpx;
}

.tanchuang-name {
  font-size: 24rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}
.tanchuang-button{
  width:251rpx;
height:60rpx;
background:rgba(255,125,72,1);
border-radius:10rpx;
color: #fff;
text-align: center;
line-height: 60rpx;
margin: auto;
margin-top: 25rpx;
}
.guanbi-img{
  width:25rpx;
height:25rpx;
background:rgba(0,0,0,1);
opacity:0.54;
position: absolute;
right: 10rpx;
top: 10rpx;
z-index: 100
}