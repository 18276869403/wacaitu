    <view class="button" bindtap="post">
      <image src="../image/chakanhaibao.png" class="qiugou-img"></image>
    </view>
    <!-- 保存 -->
    <view class="button">
      <image src="../image/save.png" class="jisuan-img"></image>
    </view>
  </view>
</view>